<?xml version='1.0' encoding='utf-8'?>
<widget id="com.degusto.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Degusto</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="http://degusto.r2.software" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <allow-navigation href="http://degusto.r2.software" />
               <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="www/img/logo.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="www/img/logo.png" width="60" height="60" />
        <icon src="www/img/logo.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="www/img/logo.png" width="76" height="76" />
        <icon src="www/img/logo.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="www/img/logo.png" width="40" height="40" />
        <icon src="www/img/logo.png" width="80" height="80" />
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="www/img/logo.png" width="57" height="57" />
        <icon src="www/img/logo.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="www/img/logo.png" width="72" height="72" />
        <icon src="www/img/logo.png" width="144" height="144" />
        <!-- iPad Pro -->
        <icon src="www/img/logo.png" width="167" height="167" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="www/img/logo.png" width="29" height="29" />
        <icon src="www/img/logo.png" width="58" height="58" />
        <icon src="www/img/logo.png" width="87" height="87" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="www/img/logo.png" width="50" height="50" />
        <icon src="www/img/logo.png" width="100" height="100" />
        <!-- iPad Pro -->
        <icon src="www/img/logo.png" width="167" height="167" />
        <!-- iTunes Marketing Image -->
        <icon src="www/img/logo.png" width="1024" height="1024" />
    </platform>
</widget>
